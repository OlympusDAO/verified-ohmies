{
  "name": "verified-ohmies-backend",
  "version": "0.1.0",
  "description": "The backend infrastructure for Verified Ohmies",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "sync": "slash-up sync",
    "sync:dev": "slash-up sync -e development",
    "vercel-build": "yarn typechain:build && tsc && yarn sync",
    "build": "yarn typechain:build && tsc",
    "lint": "npx eslint --ext .ts .",
    "lint:fix": "npx eslint --ext .ts . --fix",
    "typechain:build": "yarn run typechain --target ethers-v5 --out-dir typechain abi/*.json abi/**/*.json"
  },
  "dependencies": {
    "ethers": "^5.5.4",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "2.6.7",
    "slash-create": "^5.2.1",
    "typechain": "^7.0.0",
    "uuidv4": "6.2.7"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^9.0.0",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "@vercel/node": "^1.12.1",
    "discord.js": "12.5.3",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "prettier": "^2.2.1",
    "slash-up": "^1.0.11"
  }
}
